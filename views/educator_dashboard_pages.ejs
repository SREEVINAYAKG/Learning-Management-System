<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%=csrfToken%>" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title><%=title%></title>
</head>
<body>
    <div class="grid grid-cols-6 grid-rows-20">
    <div class="col-start-1 col-span-6">
        <%- include('header.ejs')%>
    </div>
    <div class="col-start-1 col-span-6 row-start-2">
      <h2 class="text-2xl font-semibold pl-2 text-gray-600">Welcome <%=name%></h2>
      <a href="/educator_dashboard" class="px-3 text-blue-800">Dashboard</a>
      <a href="/educator_dashboard/<%=courseId%>" class="px-3 text-blue-800">Chapters</a>

    </div>
     
      <div class='col-start-1 col-span-6 row-start-4  '>
        <h1 class="text-3xl font-semibold text-gray-600 text-center"> Pages</h1>
      </div>

  <div class="col-start-1 col-span-6 row-start-6 row-span-8 px-10 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <%if (Array.isArray(pages) && pages.length){%>
  <% pages.forEach(page => { %>
    <div class="border border-gray-300 p-4 rounded-lg shadow bg-white h-70 overflow-hidden break-words ">
      <h3 class="text-lg font-bold text-blue-800 mb-2"><%= page.pageTitle %></h3>
      <p class="text-gray-700 mb-2"><%= page.pageCotent %></p>
      <a href="/educator_dashboard/<%=courseId%>/<%= chapterId %>/pages/page/<%= page.id %>/edit"><button class="bg-blue-400 text-white font-bold p-2 m-2 rounded hover:cursor-pointer hover:bg-blue-600" >edit page</button></a>
    
    </div>
  <% }) %>
  <%}else{%>
    <p class="text-gray-600 text-center">No pages created yet.</p>
  <%}%>
</div>


     <div class="col-start-6 row-start-2 col-span-1 text-center px-2">
        <a href="/signout" class="text-red-500">Sign out</a>
      </div>

        </div>
        
  
    </body>
</html>