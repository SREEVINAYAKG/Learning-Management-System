<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%=csrfToken%>" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title><%=title%></title>
</head>
<body>
    <div class="grid grid-cols-6 grid-rows-20">
    <div class="col-start-1 col-span-6">
        <%- include('header.ejs')%>
    </div>
    <div class="col-start-1 col-span-6 row-start-2">
      <h2 class="text-2xl font-semibold pl-2 text-gray-600">Welcome <%=name%></h2>
    </div>
      <div class="col-start-1 col-span-4 row-start-3 p-10 ml-10 row-span-3">
        <form method="GET" action="/educator_dashboard/create_course">
        <button class="p-2 bg-yellow-200 border rounded hover:bg-yellow-400 cursor-pointer">Create course</button>
      </form>  
      </div>
      <div class="col-start-3 col-span-4 row-start-3 p-10 ml-10 row-span-3">
        <form method="GET" action="#">
        <button class="p-2 bg-yellow-200 border rounded hover:bg-yellow-400 cursor-pointer">View report</button>
      </form>  
      </div>
      <div class='col-start-1 col-span-6 row-start-6  '>
        <h1 class="text-3xl font-semibold text-gray-600 text-center">Your Courses</h1>
      </div>

  <div class="col-start-1 col-span-6 row-start-8 row-span-8 px-10 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% courses.forEach(course => { %>
    <div class="border border-gray-300 p-4 rounded-lg shadow bg-white">
      <h3 class="text-lg font-bold text-blue-800 mb-2"><%= course.courseName %></h3>
      <p class="text-gray-700 mb-2"><%= course.courseDescription %></p>
      <a href="/educator_dashboard/<%= course.id %>/chapter/new"><button class="bg-green-400 text-white font-bold p-2 rounded hover:cursor-pointer hover:bg-green-600" >Add chapters</button></a>
      <a href="/educator_dashboard/<%= course.id %>"><button class="bg-blue-400 text-white font-bold p-2 rounded hover:cursor-pointer hover:bg-blue-600" >view chapters</button></a><br>
      <!-- <a href="#"><button class="bg-red-400 text-white font-bold p-2 m-2 rounded hover:cursor-pointer hover:bg-red-600" >DELETE</button></a>
      <a href="#"><button class="bg-blue-400 text-white font-bold p-2 rounded hover:cursor-pointer hover:bg-blue-600" >Edit</button></a>
     -->
    </div>
  <% }) %>
</div>


     <div class="col-start-6 row-start-2 col-span-1 text-center px-2">
        <a href="/signout" class="text-red-500">Sign out</a>
      </div>

        </div>
        
  
    </body>
</html>